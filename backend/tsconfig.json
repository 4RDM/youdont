{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES6", "DOM"],
		"outDir": "./dist",
		"baseUrl": "./",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"resolveJsonModule": true
	}
}
