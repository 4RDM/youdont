{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "outDir": "dist",
        "baseUrl": "src",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "NodeNext",
        "typeRoots": ["node_modules/@types"],
        "removeComments": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
    }
}
